<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".activities.SignUpActivity"
    >
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

    <TextView
        android:id="@+id/txt_su"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Sign Up"
        android:textColor="#000"
        android:textSize="40sp"
        ></TextView>

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="wrap_content"
        android:layout_height="320dp"
        android:layout_below="@+id/txt_su"
        android:src="@drawable/logo"
        >

    </ImageView>
    <RelativeLayout
        android:id="@+id/rel_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/img_logo"
        android:layout_margin="16dp"
        >


      <EditText
          android:id="@+id/edt_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:background="@null"
          android:drawableLeft="@drawable/ic_person"
          android:drawablePadding="10dp"
          android:drawableTint="#585858"
          android:hint="Name"
          android:imeOptions="actionNext"
          android:inputType="text"
          android:singleLine="true"
          android:textSize="20sp"
          />


      <View
          android:id="@+id/view5"
          android:layout_width="match_parent"
          android:layout_height="2dp"
          android:layout_below="@+id/edt_name"
          android:layout_marginTop="10dp"
          android:background="#585858"
          />


      <EditText
          android:id="@+id/edt_email"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/view5"
          android:layout_marginTop="10dp"
          android:background="@null"
          android:drawableLeft="@drawable/ic_email_black"
          android:drawablePadding="10dp"
          android:drawableTint="#585858"
          android:hint="Email"
          android:imeOptions="actionNext"
          android:inputType="textEmailAddress"
          android:singleLine="true"
          android:textSize="20sp"
          />


      <View
          android:id="@+id/view1"
          android:layout_width="match_parent"
          android:layout_height="2dp"
          android:layout_below="@+id/edt_email"
          android:layout_marginTop="10dp"
          android:background="#585858"
          />


      <EditText
          android:id="@+id/edt_number"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/view1"
          android:layout_marginTop="15dp"
          android:background="@null"
          android:drawableLeft="@drawable/ic_phone"
          android:drawablePadding="10dp"
          android:drawableTint="#585858"
          android:hint="Mobile No."
          android:imeOptions="actionNext"
          android:inputType="phone"
          android:singleLine="true"
          android:textSize="20sp"
          />


      <View
          android:id="@+id/view3"
          android:layout_width="match_parent"
          android:layout_height="2dp"
          android:layout_below="@+id/edt_number"
          android:layout_marginTop="10dp"
          android:background="#585858"
          />

      <EditText
          android:id="@+id/edt_password"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/view3"
          android:layout_marginTop="15dp"
          android:background="@null"
          android:drawableLeft="@drawable/ic_lock"
          android:drawablePadding="10dp"
          android:drawableTint="#585858"
          android:hint="Password"
          android:imeOptions="actionGo"
          android:inputType="textPassword"
          android:singleLine="true"
          android:textSize="20sp"
          />


      <View
          android:id="@+id/view4"
          android:layout_width="match_parent"
          android:layout_height="2dp"
          android:layout_below="@+id/edt_password"
          android:layout_marginTop="10dp"
          android:background="#585858"
          />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rel_1"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        >
      <Button
          android:id="@+id/signup_back"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          android:layout_weight="1"
          android:background="@drawable/bg_border"
          android:text="Back"
          android:textAllCaps="false"
          android:textColor="#fff"
          ></Button>
      <Button
          android:id="@+id/btn_next"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          android:layout_weight="1"
          android:background="@drawable/bg_border"
          android:text="Next"
          android:textAllCaps="false"
          android:textColor="#fff"
          ></Button>
    </LinearLayout>

  </RelativeLayout>


</android.support.v4.widget.NestedScrollView>